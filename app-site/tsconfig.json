{
    "compilerOptions": {
      "lib": ["es2015", "es2017", "es2018", "dom", "esnext"],
      "target": "es6",
      "module": "es2015",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "strict": true,      
      "moduleResolution": "nodenext",
      "resolveJsonModule": true,
      "isolatedModules": false,
      "noEmit": true,
      "jsx": "react"
    },
    "include": ["src", "**/*.d.ts"]
  }