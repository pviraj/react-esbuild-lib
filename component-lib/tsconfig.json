{
  "compilerOptions": {
    "baseUrl": "./",
    "strictPropertyInitialization": false,
    "declaration": true,
    "target": "esnext",
    "outDir": "dist",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",    
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./src/**/*",
    "**/*.d.ts"
  ]
}